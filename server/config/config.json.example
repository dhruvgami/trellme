{
  "api_host"      : "localhost:3000",
  "mail_interval" : 86400000,
  "trello"        : {
    "appName"      : "TrellMe",
    "requestURL"   : "https://trello.com/1/OAuthGetRequestToken",
    "accessURL"    : "https://trello.com/1/OAuthGetAccessToken",
    "authorizeURL" : "https://trello.com/1/OAuthAuthorizeToken",
    "key"          : "trello-key",
    "secret"       : "trello-secret"
  },
  "mail" : {
    "fromAddress"        : "admin@trellme.com",
    "subject"            : "[TrellMe] Updates on your Trello Boards",
    "due_notify_subject" : "[TrellMe] Trello Cards due now!"
  },
  "db" : {
    "uri" : "mongodb://localhost:27017/trellme"
  }
}
